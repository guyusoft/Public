@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<link rel="stylesheet" href="~/styles/font-awesome.min.css" />

<section ng-controller="userEditController">
    <div class="panel-body">
        <div class="col-lg-9" style="width:868px;">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form id="userInfoEditor" name="userInfoEditor" class="form-horizontal ng-pristine ng-valid" novalidate>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">登陆用户名</label>
                            <div class="col-sm-10">
                                <input type="text" required="" name="loginName" id="loginName" class="form-control form-control-rounded" ng-model="item.LoginName">
                                <span ng-show="validateInput('loginName', 'required')" class="text-danger">请输入登陆用户名</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">登陆密码</label>
                            <div class="col-sm-10">
                                <input type="password" required="" name="loginPwd" id="loginPwd" class="form-control form-control-rounded" ng-model="item.LoginPwd">
                                <span ng-show="validateInput('loginPwd', 'required')" class="text-danger">请输入登陆密码</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">姓</label>
                            <div class="col-sm-10">
                                <input type="text" required="" name="lastName" id="lastName" class="form-control form-control-rounded" ng-model="item.LastName">
                                <span ng-show="validateInput('lastName', 'required')" class="text-danger">请输入姓</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">名</label>
                            <div class="col-sm-10">
                                <input type="text" required="" name="firstName" id="firstName" class="form-control form-control-rounded" ng-model="item.FirstName">
                                <span ng-show="validateInput('firstName', 'required')" class="text-danger">请输入名字</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" required="" name="emailAddress" id="emailAddress" class="form-control form-control-rounded" ng-model="item.EmailAddress">
                                <span ng-show="validateInput('emailAddress', 'required')" class="text-danger">请输入Email</span>
                                <span ng-show="validateInput('emailAddress', 'email')" class="text-danger">请输入合法的Email地址</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">通讯地址</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control form-control-rounded" ng-model="item.PostAddress">
                            </div>
                        </div>
                        <br>
                        <div class="clearfix">
                            <div class="pull-left">
                                <button type="button" class="btn btn-default m-r-10 m-t-10" ng-click="cancel()">
                                    <em class="fa fa-edit fa-fw"></em>取消
                                </button>
                                <button type="button" class="btn btn-primary m-t-10" ng-click="save()">
                                    <em class="fa fa-check fa-fw"></em>保存
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p class="lead">Article Data</p>
                    <p class="lead">SEO Metadata</p>
                    <div class="form-group">
                        <p>Title</p>
                        <input type="text" placeholder="Brief description.." class="form-control">
                    </div>
                    <div class="form-group">
                        <p>Description</p>
                        <textarea rows="5" placeholder="Max 255 characters..." class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <p>Keywords</p>
                        <textarea rows="5" placeholder="Max 1000 characters..." class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script src='~/plugins/text-angular/textAngular-rangy.min.js'></script>
    <script src='~/plugins/text-angular/textAngular-sanitize.min.js'></script>
    <script src='~/plugins/text-angular/textAngular.min.js'></script>
    <script src="~/scripts/userEdit.js" type="text/javascript"></script>
}

