@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<section ng-controller="newsController">
    <div class="content-wrapper ng-scope ng-fadeInUp">
        <h3>新闻
            <button type="button" class="btn btn-sm btn-primary" ng-click="add()">新增</button></h3>
        <table datatable="ng" class="row-border hover">
            <thead>
                <tr role="row">
                    <th style="width: 120px" tabindex="0" rowspan="1" colspan="1" ng-repeat="colDef in columnDefinition">
                        <strong>{{colDef}}</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr role="row" class="odd" ng-repeat="newsItem in newsItems">
                    <td class="sorting_1">{{newsItem.Title}}</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-danger" ng-click="delete(newsItem)">
                            <em class="icon-close"></em>
                        </button>
                        <button type="button" class="btn btn-sm btn-warning" ng-click="edit(newsItem)">
                            <em class="icon-note"></em>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

@section Script{
    <script src="~/scripts/news.js" type="text/javascript"></script>
}

