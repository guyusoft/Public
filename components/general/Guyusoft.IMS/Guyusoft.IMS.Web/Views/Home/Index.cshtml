@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<link rel="stylesheet" href="~/styles/ngDialog.min.css" />
<link rel="stylesheet" href="~/styles/ngDialog-theme-default.min.css" />
<script type="text/ng-template" id="navigationMenuAddAndEdit">
<div class="panel panel-default dialog">
    <div class="panel-heading">新增链接</div>
    <div class="panel-body">
    <form class="form-horizontal ng-pristine ng-valid">
        <div class="form-group">
            <label class="col-lg-4 control-label">链接标题</label>
            <div class="col-lg-8">
                <input type="text" placeholder="链接标题" class="form-control" value="{{ngDialogData.Text}}">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-4 control-label">链接地址</label>
            <div class="col-lg-8">
                <input type="text" placeholder="链接地址" class="form-control" value="{{ngDialogData.Href}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-8">
                <button type="button" class="btn btn-sm btn-default">确定</button>
                <button type="button" class="btn btn-sm btn-default">取消</button>
            </div>
        </div>
    </form>
    </div>
</div>
</script>

<section ng-controller="navigationMenuController">
    <div class="content-wrapper ng-scope ng-fadeInUp">
        <h3>Orders</h3>
        <div class="table-responsive b0 ng-scope">
            <div class="dataTables_wrapper no-footer">
                <div class="dataTables_length">
                    <label>
                        每页显示
                        <select>
                            <option ng-repeat="opt in pageOptions" value="{{opt}}">{{opt}}
                            </option>
                        </select>
                    </label>
                </div>
                <div class="dataTables_filter">
                    <label>搜索:<input type="search" class="" placeholder=""></label>
                </div>
                <table class="table table-hover ng-isolate-scope dataTable no-footer" style="display: table;" role="grid">
                    <thead>
                        <tr role="row">
                            <th style="width: 120px" tabindex="0" rowspan="1" colspan="1" ng-repeat="colDef in columnDefinition">
                                <strong>{{colDef}}</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr role="row" class="odd" ng-repeat="menuItem in menuItems">
                            <td class="sorting_1">{{menuItem.Text}}</td>
                            <td>{{menuItem.Href}}</td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-default" ng-click="delete(menuItem)">
                                    <em class="icon-close"></em>
                                </button>
                                <button type="button" class="btn btn-sm btn-default" ng-click="edit(menuItem)">
                                    <em class="icon-note"></em>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-4 action">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary" ng-click="add()">新增</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="dataTables_paginate paging_simple_numbers">
                                <a class="paginate_button previous disabled" tabindex="0">Previous</a>
                                <span>
                                    <a class="paginate_button current" data-dt-idx="1" tabindex="0">1</a>
                                    <a class="paginate_button " data-dt-idx="2" tabindex="0">2</a>
                                </span>
                                <a class="paginate_button next" data-dt-idx="3" tabindex="0">Next</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script src="~/scripts/ngDialog.min.js" type="text/javascript"></script>
    <script src="~/scripts/navigationMenu.js" type="text/javascript"></script>
}

